- var confirmLink = AppFullUrl + '/email-verification/' + _id + ':' + verification
- var title = 'Confirm Your Registration';
include includes/content-wrapper.pug
    include includes/title.pug
    tr
      td(style={ 'font-size': '14px', 'line-height': '30px', padding: '20px 0', color: '#666' })
        | Welcome to #{AppName}
        br
        | Click the link below to complete verification:
    tr
      td(style={ padding: '5px 0' })
        a(
          href=confirmLink
          style={ padding: '10px 28px', background: '#4055ee', color: '#fff', 'text-decoration': 'none' }
        ) Verify Email
    include includes/confirm-link.pug
    tr
      td(style={ 'font-size': '12px', 'line-height': '25px', padding: '20px 0', color: '#666', 'font-weight': 'bolder' })
        span(style={ 'font-size': '14px', color: 'red' }) 5 Security Tips:
        br
        | * DO NOT give your password to anyone!
        br
        | * DO NOT call any phone number for someone claiming to be #{AppName} Support!
        br
        | * Make sure you are visiting "
        a(href=AppFullUrl) #{AppUrl}"
        | !
    tr
      td(style={ padding: '20px 0 0 0', 'line-height': '26px', color: '#666' })
        | If this activity is not your own operation, please contact us immediately.
    tr
      td
        a(
          style={ color: '#e9b434' }
          href=AppFullUrl
        ) https://support.#{AppName}
    include includes/signature.pug
include includes/footer.pug
